{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "ManagedLegalEntityBpnlConstraintSchema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/ManagedLegalEntityBpnlConstraint"
    }
  ],
  "$id": "https://w3id.org/catenax/2025/9/policy/managed-legal-entity-bpnl-constraint-schema.json",
  "definitions": {
    "ManagedLegalEntityBpnlConstraint": {
      "type": "object",
      "properties": {
        "leftOperand": {
          "type": "string",
          "const": "ManagedLegalEntityBpnl"
        },
        "operator": {
          "type": "string",
          "const": "isAnyOf"
        },
        "rightOperand": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/ManagedLegalEntityBpnlRightOperand"
          }
        }
      },
      "additionalProperties": false
    },
    "ManagedLegalEntityBpnlRightOperand": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string",
          "const": "^BPNL[0-9A-Z]{12}$"
        },
        "legalText": {
          "type": "object",
          "properties": {
            "permission": "The Data Provider permits the Data Consumer to make the Data available for use to the companies specified herein ('Sublicensing'), for which the Data Consumer acts in an 'is managed by' relationship (within the meaning of the Catena-X Standard CX-0074), provided that the Data Consumer ensures that such managed companies comply with the terms of the Agreement concluded via the Registered Connector (RC)."
          }
        },
        "operandType": {
          "type": "string",
          "const": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
